@using PagedList.Mvc;
@using PagedList;
@model PagedList.PagedList<qlThuVien.Models.EF.LoaiSach>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/layout/AdminLayout.cshtml";
}

<h2>Quản lý loại sách</h2>

<p>
    @Html.ActionLink("Thêm mới", "Them")
</p>
<table class="table" border="1">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().maLoaiSach)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().tenLoaiSach)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.maLoaiSach)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tenLoaiSach)
            </td>

            <td>
                @Html.ActionLink("Chỉnh sửa", "Sua", new { @maLoaiSach = item.maLoaiSach })|
                @Html.ActionLink("Hiển thị", "HienThi", new { @maLoaiSach = item.maLoaiSach })|
                @Html.ActionLink("Xóa", "Xoa", new { @maLoaiSach = item.maLoaiSach })
            </td>
        </tr>
    }
</table>

@*link liên kết các trang*@
Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/ @Model.PageCount
<div class="MenuTrang">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
</div>

<style>
    .MenuTrang li {
        display: inline;
    }
</style>
