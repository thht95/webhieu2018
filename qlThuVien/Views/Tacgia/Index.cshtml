@using PagedList.Mvc;
@using PagedList;
@model PagedList.PagedList<qlThuVien.Models.EF.TacGia>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/layout/AdminLayout.cshtml";
}

<h2>Quản lý tác giả</h2>

<p>
    @Html.ActionLink("Thêm mới", "Them")
</p>
<table class="table" border="1">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().maTacGia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().tenTacGia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().diaChi)
        </th>
        
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.maTacGia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tenTacGia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.diaChi)
            </td>
            
            <td>
                @Html.ActionLink("Chỉnh sửa", "Sua", new { @maSach = item.maTacGia })|
                @Html.ActionLink("Hiển thị", "HienThi", new { @maSach = item.maTacGia })|
                @Html.ActionLink("Xóa", "Xoa", new { @maSach = item.maTacGia })
            </td>
        </tr>
    }
</table>

@*link liên kết các trang*@
Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/ @Model.PageCount
<div class="MenuTrang">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
</div>

<style>
    .MenuTrang li {
        display: inline;
    }
</style>
